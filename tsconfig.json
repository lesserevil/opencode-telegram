{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "target": "ES2020",
    "moduleResolution": "nodenext",
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "lib": ["ES2020", "dom"],
    "types": ["node"],
    "downlevelIteration": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["scripts/**/*", "tests/**/*"]
}
